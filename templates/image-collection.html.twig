{% extends 'default.html.twig' %}

{% block content %}
<div class="img-container">
{% for item in pages.find('/projects/content').collection %}
    <div class="project-list" data-type="{{ item.header.categories|join(',') }}">
        <a href="{{ item.url }}" class="item">{{ item.media[item.header.picked_image].resize(500, auto) }}</a>
        <div class="hover-text">{{ item.summary }}</div>
    </div>
{% endfor %}
</div>

<div id="project-container">
    <a href="#" id="cross">âœ•</a>
    <header class="menu-bar">
        <nav>
            <ul>
                <li><a id="prev" href="#" title="coming soon !">{{ "PROJECT.PREV"|t }}</a></li>
                <li><a id="next" href="#" title="coming soon !">{{ "PROJECT.NEXT"|t }}</a></li>
            </ul>
        </nav>
    </header>
    <article class="project yellow">
        <!-- content in json file -->
    </article>
    <aside class="menu-bar right">
        <ul>
            <li><a href="#img" class="selected">Images</a></li>
            <li><a href="#txt">{{ "PROJECT.MENU_TXT"|t }}</a></li>
            <li><a href="#links">{{ "PROJECT.MENU_LKS"|t }}</a></li>
        </ul>
    </aside>
    <footer class="menu-bar">
        <p></p>
    </footer>
</div>
{% endblock %}

{% block javascripts %}
{% do assets.addJs('theme://js/script.js') %}
{% do assets.addJs('theme://js/projects.js') %}
{% do assets.addJs('theme://js/image.js') %}
{% endblock %}
