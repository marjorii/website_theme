{% set payload %}
<section id="img">
    {% for image in page.media.images %}
    {% if image.height >= image.width %}
    {{ image.html('', '', 'portrait') }}
    {% else %}
    {{ image.html() }}
    {% endif %}
    {% endfor %}
    {% for animated in page.media.files %}
    {{ animated.html() }}
    {% endfor %}
    {% for video in page.media.videos %}
    {{ video.html() }}
    {% endfor %}
</section>
    <section id="txt">
        {{ page.content }}
    </section>
    <section id="links">
        {% for link in page.header.links %}
        <p>{{ link.info }}</p>
        <a href="{{ link.url }}" target="_blank">{{ link.name }}</a>
        <br>
        <br>
        {% endfor %}
    </section>
{% endset %}
{% set json = { 'content': payload, 'title': page.title, 'links': page.header.links } %}
{{ json|json_encode|raw }}
